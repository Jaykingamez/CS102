import static org.junit.Assert.*;
import org.junit.Test;

public class HandTest {

    @Test
    public void testAddCard() {
        Hand hand = new Hand();
        Card card = new Card(5, Suit.HEARTS);
        hand.addCard(card);
        assertEquals(1, hand.getNumberOfCards());
        assertTrue(hand.containsCard(card));
    }

    @Test
    public void testRemoveCard() {
        Hand hand = new Hand();
        Card card = new Card(8, Suit.SPADES);
        hand.addCard(card);
        assertTrue(hand.containsCard(card));
        hand.removeCard(card);
        assertEquals(0, hand.getNumberOfCards());
        assertFalse(hand.containsCard(card));
    }

    @Test
    public void testGetCardAtIndex() {
        Hand hand = new Hand();
        Card card1 = new Card(2, Suit.DIAMONDS);
        Card card2 = new Card(9, Suit.CLUBS);
        hand.addCard(card1);
        hand.addCard(card2);
        assertEquals(card1, hand.getCard(0));
        assertEquals(card2, hand.getCard(1));
    }

    // Add more tests for other methods in the Hand class
}
